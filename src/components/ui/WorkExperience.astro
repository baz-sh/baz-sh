---
import { render, type CollectionEntry } from 'astro:content';

interface Props {
  entry: CollectionEntry<'jobs'>;
}

const { entry } = Astro.props;
const { Content } = await render(entry);
---

<div class="card">
  <div class="flex flex-col sm:flex-row sm:items-start gap-4 mb-4">
    <div class="sm:w-28 shrink-0">
      <span class="text-sm text-text-muted tabular-nums">
        {entry.data.from} – {entry.data.to}
      </span>
    </div>
    <div class="flex-1">
      <h3 class="text-headings font-semibold">{entry.data.title}</h3>
      <a 
        href={entry.data.url} 
        target="_blank" 
        rel="noopener noreferrer"
        class="text-accent hover:text-accent-hover text-sm"
      >
        {entry.data.company}
      </a>
      <span class="text-text-muted text-sm"> · {entry.data.location}</span>
    </div>
  </div>
  <div class="prose prose-sm max-w-none">
    <Content />
  </div>
</div>
